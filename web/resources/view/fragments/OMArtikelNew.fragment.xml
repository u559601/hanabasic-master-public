<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Panel headerText="Artikelerfassung" class="sapUiResponsiveMargin">
		<content>
			<Label text="AID" labelFor="inAID"/>
			<Input id="inAID" type="Text" class="sapUiSmallMarginBottom" value="{a>/AID}"/>
			<Label text="Beschreibung" labelFor="iBeschreibung"/>
			<Input id="iBeschreibung" type="Text" class="sapUiSmallMarginBottom" value="{a>/Beschreibung}"/>
			<Button text="Anlegen" press="onCreateArtikel"/>
		</content>
	</Panel>
</core:FragmentDefinition>